@model List<prolabson.Models.Doktorlar>

@{
    ViewBag.Title = "Hasta Silme Onayı";
}


@if (Model.Count > 0)
{
    <p>Randevu Oluştur</p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Uzmanlık Alanı</th>
                <th>Çalıştığı Hastane</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.UzmanlikAlani</td>
                    <td>@item.CalistigiHastane</td>
                    <td>
                        <form action="@Url.Action("CreateRandevu", "Randevu")" method="post" style="display: flex; justify-content: space-between; align-items: center;">
                            <input type="hidden" name="doktorId" value="@item.DoktorID" />
                            

                            <div style="display: flex; gap: 10px;">
                                <input type="date" name="tarih" required class="form-control" />
                                <input type="time" name="saat" required class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-danger">Ekle</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Doktor bulunamadı.</p>
}



